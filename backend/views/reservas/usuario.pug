extends ../layout

block content
    .container
        h4 Reservar para #{usuario.nombre} / #{usuario.apellido}
        p Seleccione un alojamiento y fechas para el cliente seleccionado
        .container 
        form(action=`/reservas/usuario/${alumno._id}`, method="post") 
            label.form-label(for="asignatura") Módulo:
            select.form-control(name="asignatura", required)
                each asignatura in asignaturas
                    option(value=`${asignatura._id}`) #{asignatura.nombre} (#{asignatura.ciclo})
            br
            label.form-label(for="year") Año:
            input.form-control(type="number", name="year", required, value="2024")
            br 

            button.btn.btn-success(type="submit") Guardar
            a.btn.btn-danger(href="/") Cancelar
