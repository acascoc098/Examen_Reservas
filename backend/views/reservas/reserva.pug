extends ../layout

block content
    .container
        h4 Reservar en #{alojamiento.nombre} / #{alojamiento.direccion}
        p Seleccione un cliente para reservar en este alojamiento
        .container 
        form(action=`/reservas/alojamiento/${alojamiento._id}`, method="post") 
            label.form-label(for="cliente") Cliente:
            select.form-control(name="cliente", required)
                each cliente in clientes
                    option(value=`${cliente._id}`) #{cliente.nombre} #{cliente.apellido}
            br
            label.form-label(for="date") Fecha:
            input.form-control(type="text", name="date", required, value="2024")
            br 

            button.btn.btn-success(type="submit") Guardar
            a.btn.btn-danger(href="/") Cancelar
