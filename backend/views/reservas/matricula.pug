extends ../layout

block content
    .container
        h4 Matricular en #{asignatura.nombre} / #{asignatura.ciclo}
        p Seleccione un alumno para matricular en esta asignatura
        .container 
        form(action=`/matriculas/asignatura/${asignatura._id}`, method="post") 
            label.form-label(for="alumno") Alumno:
            select.form-control(name="alumno", required)
                each alumno in alumnos
                    option(value=`${alumno._id}`) #{alumno.nombre} #{alumno.apellido}
            br
            label.form-label(for="year") AÃ±o:
            input.form-control(type="number", name="year", required, value="2024")
            br 

            button.btn.btn-success(type="submit") Guardar
            a.btn.btn-danger(href="/") Cancelar
