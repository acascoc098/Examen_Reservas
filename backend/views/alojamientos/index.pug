extends ../layout

block content
    .container 
        h1 Lista de Alojamientos
        br
        table.table.table-hover.table-striped.table-bordered
            thead
                tr
                th Nombre
                th Ciudad
                th Tipo
                th Precio
                th Acci√≥n
                th Reservas 
            tbody
                if alojamientos
                    each alojamiento in alojamientos
                        tr
                            td= alojamiento.nombre
                            td= alojamiento.ciudad
                            td= alojamiento.tipo
                            td= alojamiento.precio                  
                            td
                                a(href=`/alojamientos/edit/${alojamiento._id}`) Editar
                                span | 
                                a(href=`/alojamientos/delete/${alojamiento._id}`) Eliminar
                            td 
                                a(href=`/reservas/alojamiento/${alojamiento._id}`) Mostrar sus reservas
        br
        a(href="/alojamientos/create") Crear nuevo alojamiento