extends ../layout

block content
    .container 
        h1 Lista de Alojamientos
        br
        table.table.table-hover.table-striped.table-bordered
            thead
                tr
                th Nombre
                th Teléfono
                th Dirección
                th Acción
            tbody
                each alojamiento in alojamientos
                    tr
                        td= alojamiento.nombre
                        td= alojamiento.telefono
                        td= alojamiento.direccion
                        td
                            a(href=`/reservas/alojamiento/${alojamiento._id}`) Reservar
        br
        a(href="/alojamientos/create") Crear nuevo alojamiento 