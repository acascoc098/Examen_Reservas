extends ../layout

block content
    .container 
        h1 Lista de Reservas
        br
        table.table.table-hover.table-striped.table-bordered
            thead
                tr
                    th Nombre Cliente
                    th Apellido Cliente
                    th Nombre Hotel                
                    th Ciudad Hotel
                    th Fecha
                    th Precio
                    th Acciones
            tbody
                each reserva in reservas
                    tr
                        td= reserva.usuario.nombre
                        td= reserva.usuario.apellido
                        td= reserva.alojamiento.nombre
                        td= reserva.alojamiento.ciudad
                        td= reserva.fecha                       
                        td= reserva.precio
                        td
                            a(href=`/reserva/edit/${reserva._id}`) Editar
                            span | 
                            a(href=`/reserva/delete/${reserva._id}`) Eliminar
        br
        a.btn.btn-success(href="/reservar/create") AÃ±adir nueva reserva